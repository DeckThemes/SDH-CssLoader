{
  "compilerOptions": {
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react",
    "jsxFactory": "window.SP_REACT.createElement",
    "jsxFragmentFactory": "window.SP_REACT.Fragment",
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@cssloader/backend": ["./src/backend"],
      "@/backend": ["./src/backend-impl"],
      "@/lib": ["./src/lib"],
      "@/styles": ["./src/styles"],
      "@/types": ["./src/types"],
      "@/modules/*": ["./src/modules/*"],
      "@/decky-patches": ["./src/decky-patches"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
